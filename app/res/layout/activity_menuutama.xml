<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bgmg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:text="Halaman Utama"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"/>

    <ImageButton
        android:id="@+id/deteksi"
        android:background="@drawable/deteksimgg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="50dp" />

    <ImageButton
        android:id="@+id/jenis"
        android:background="@drawable/jenmg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:id="@+id/tentang"
        android:background="@drawable/tentmggg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp" />

</LinearLayout>
